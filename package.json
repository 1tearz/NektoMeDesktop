{
  "name": "nekto-tearzBETA",
  "version": "1.0.0",
  "description": "Nekto BETA Electron Wrapper",
  "author": {
    "name": "tearz",
    "email": "tearz@example.com"
  },
  "homepage": "https://nekto.me",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win nsis",
    "build:deb": "electron-builder --linux deb"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "nekto.desktop.app",
    "productName": "Nekto Desktop",
    "asar": true,
    "compression": "maximum",
    "icon": "assets/icon",
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README}",
      "!node_modules/*/{test,__tests__,tests,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin"
    ],
    "linux": {
      "icon": "assets/icon",
      "target": [
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "category": "Utility",
      "maintainer": "tearz <tearz@example.com>"
    },
    "deb": {
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils"
      ]
    },
    "win": {
      "icon": "assets/icon",
      "target": "nsis",
      "artifactName": "NektoDesktopSetup.exe"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
